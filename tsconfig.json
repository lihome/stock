{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node",
    "module": "CommonJS",
    /** stronger guarantees of program correctness */
    "strict": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "typeRoots": ["src/typings"],
    "types": [
      "webpack-env",
      "custom"
    ],
    "outDir": "dist",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
